<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.Pane?>
<?import javafx.scene.layout.VBox?>

<Pane fx:id="newGame" xmlns="http://javafx.com/javafx/10.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="pl.my.game.controllers.newGame.NewGameController">
   <children>
      <VBox alignment="TOP_CENTER" maxHeight="-Infinity" maxWidth="-Infinity" minHeight="-Infinity" minWidth="-Infinity" prefHeight="400.0" prefWidth="600.0" spacing="10.0">
         <children>
            <ImageView fitHeight="150.0" fitWidth="350.0" pickOnBounds="true" preserveRatio="true" />
            <Button mnemonicParsing="false" onAction="#newGame" prefHeight="50.0" prefWidth="200.0" text="New Game" />
            <Button mnemonicParsing="false" onAction="#loadGame" prefHeight="50.0" prefWidth="200.0" text="Load Game" />
            <Button mnemonicParsing="false" onAction="#options" prefHeight="50.0" prefWidth="200.0" text="Options" />
            <Button mnemonicParsing="false" onAction="#exitGame" prefHeight="50.0" prefWidth="200.0" text="Exit" />
         </children>
      </VBox>
   </children>
</Pane>
